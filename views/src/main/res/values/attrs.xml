<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AvatarView">
        <attr name="shape" format="enum">
            <enum name="circle" value="0" />
            <enum name="sexangle" value="1" />
        </attr>
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MaxHeightNestedScrollView">
        <attr name="maxHeight" format="dimension" />
        <attr name="maxHeightRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="AvatarCropView">
        <attr name="shape_crop" format="enum">
            <enum name="circle" value="0" />
            <enum name="sexangle" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ColumnDiagramView">
        <attr name="text_size" format="dimension" />
        <attr name="foot_height" format="dimension" />
        <attr name="diagram_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ToolTipsLayout">
        <attr name="indicator_direction" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="start" value="2" />
            <enum name="end" value="3" />
        </attr>
        <attr name="indicator_gravity" format="enum">
            <enum name="start" value="0" />
            <enum name="end" value="1" />
            <enum name="center" value="2" />
        </attr>
        <attr name="indicator_marginStart" format="dimension" />
        <attr name="indicator_marginEnd" format="dimension" />
        <attr name="indicator_size" format="dimension" />
        <attr name="indicator_radius" format="dimension" />
        <attr name="shadow_blur_radius" format="dimension" />
        <attr name="shadow_color" format="color" />
        <attr name="shadow_offset_x" format="dimension" />
        <attr name="shadow_offset_y" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="tips_background_color" format="color" />
    </declare-styleable>

    <!-- ExpandableCardView -->
    <declare-styleable name="ExpandableCardView">
        <attr name="fold_offset" format="dimension" />
        <attr name="default_state" format="enum">
            <enum name="fold" value="0" />
            <enum name="expand" value="1" />
        </attr>
    </declare-styleable>

</resources>